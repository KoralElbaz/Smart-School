<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen2"
    tools:context=".profileTeacher">


    <TextView
        android:id="@+id/gradesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Profile Teacher"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="10dp"
        />


    <!--שורה 1-->
    <TextView
        android:id="@+id/full_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gradesTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="180dp"
        android:text="Full Name:"
        android:textSize="25dp"
        android:textStyle="bold"
        />



    <TextView
        android:id="@+id/fill1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gradesTitle"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="180dp"
        android:text=""
        android:textSize="20dp" />


    <!--שורה 2-->

    <TextView
        android:id="@+id/ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/full_name"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="ID:"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/fill2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fill1"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textSize="20dp"
        />


    <!--שורה 3-->


    <TextView
        android:id="@+id/name_school"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ID"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Name School:"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/fill3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fill2"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="28dp"
        android:text=""
        android:textSize="20dp"
        />

    <!--שורה 4-->


    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_school"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="Email:"
        android:textSize="25dp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/fill4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fill3"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="20dp"
        android:text=""
        android:textSize="20dp"
        />

</RelativeLayout>